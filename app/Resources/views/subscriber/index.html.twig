{% extends 'base.html.twig' %}

{% block body %}
    <h1>Subscribers list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Unsubscribed</th>
                <th>Locale</th>
                <th>Deletedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subscriber in subscribers %}
            <tr>
                <td><a href="{{ path('subscriber_show', { 'id': subscriber.id }) }}">{{ subscriber.id }}</a></td>
                <td>{{ subscriber.email }}</td>
                <td>{{ subscriber.firstname }}</td>
                <td>{{ subscriber.lastname }}</td>
                <td>{% if subscriber.unsubscribed %}Yes{% else %}No{% endif %}</td>
                <td>{{ subscriber.locale }}</td>
                <td>{% if subscriber.deletedAt %}{{ subscriber.deletedAt|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('subscriber_show', { 'id': subscriber.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('subscriber_edit', { 'id': subscriber.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('subscriber_new') }}">Create a new subscriber</a>
        </li>
    </ul>
{% endblock %}
