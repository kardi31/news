<!--Featured Three Column-->
<section class="featured-three-column style-two">
    <div class="auto-container">
        <div class="row clearfix">
            {% for news in newsList %}
                <!--Column-->
                <div class="col-md-4 col-sm-6 col-xs-12 column">
                    <article class="inner-box">
                        <figure class="image">
                            <a href="{{ generate_news_url(news) }}">
                                <img
                                        src="{{ news.photo.mainPhoto.show('370x250') }}"
                                        alt="">
                            </a>
                            <div class="overlay">
                                <span class="left-curve"></span>
                                <span class="right-curve"></span>
                                <a href="{{ generate_news_url(news) }}" class="overlay-link"></a>
                            </div>
                        </figure>
                        <div class="content">
                            <h3>{{ news.trans('title') }}</h3>
                            <div class="text">
                                <p>{{ news.trans('content') | striptags | truncate(50)  }}</p>
                            </div>
                            <div class="link">
                                <a href="{{ generate_news_url(news) }}" class="read-more normal-btn theme-btn"><span class="fa fa-caret-right"></span> Czytaj wiÄ™cej</a></div>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
