<?php

namespace Kardi\NewsBundle\Entity;

/**
 * NewsCategory
 */
class NewsCategory
{
    /**
     * @var integer
     */
    private $id;

    /**
     * @var \Doctrine\Common\Collections\Collection
     */
    private $newses;

    /**
     * @var \Doctrine\Common\Collections\Collection
     */
    private $translations;

    /**
     * Constructor
     */
    public function __construct()
    {
        $this->newses = new \Doctrine\Common\Collections\ArrayCollection();
        $this->translations = new \Doctrine\Common\Collections\ArrayCollection();
    }

    /**
     * Get id
     *
     * @return integer
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Add newse
     *
     * @param \Kardi\NewsBundle\Entity\News $newse
     *
     * @return NewsCategory
     */
    public function addNewse(\Kardi\NewsBundle\Entity\News $newse)
    {
        $this->newses[] = $newse;

        return $this;
    }

    /**
     * Remove newse
     *
     * @param \Kardi\NewsBundle\Entity\News $newse
     */
    public function removeNewse(\Kardi\NewsBundle\Entity\News $newse)
    {
        $this->newses->removeElement($newse);
    }

    /**
     * Get newses
     *
     * @return \Doctrine\Common\Collections\Collection
     */
    public function getNewses()
    {
        return $this->newses;
    }

    /**
     * Add translation
     *
     * @param \Kardi\NewsBundle\Entity\NewsCategoryTranslation $translation
     *
     * @return NewsCategory
     */
    public function addTranslation(\Kardi\NewsBundle\Entity\NewsCategoryTranslation $translation)
    {
        $this->translations[] = $translation;

        return $this;
    }

    /**
     * Remove translation
     *
     * @param \Kardi\NewsBundle\Entity\NewsCategoryTranslation $translation
     */
    public function removeTranslation(\Kardi\NewsBundle\Entity\NewsCategoryTranslation $translation)
    {
        $this->translations->removeElement($translation);
    }

    /**
     * Get translations
     *
     * @return \Doctrine\Common\Collections\Collection
     */
    public function getTranslations()
    {
        return $this->translations;
    }

    /**
     * @param $field
     * @return string
     */
    public function trans($field)
    {
        $this->setTranslations($this->translations);

        return parent::trans($field);
    }
}
