    {{ parent() }}
    <script src="{{ asset('bundles/kardiadmin/assets/global/plugins/select2/js/select2.full.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kardiadmin/assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js') }}" type="text/javascript"></script>a
    <script src="{{ asset('bundles/kardiadmin/assets/custom/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kardiadmin/assets/custom/scripts.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kardiadmin/assets/global/plugins/fancybox/source/jquery.fancybox.pack.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kardiadmin/assets/global/plugins/plupload/js/plupload.full.min.js') }}" type="text/javascript"></script>

    <script src="{{ asset('bundles/kardiadmin/images.js') }}" type="text/javascript"></script>
{% endblock footer_javascripts %}
