{% extends 'KardiAdminBundle::admin.html.twig' %}

{% block content %}
    <!-- BEGIN BREADCRUMBS -->
    <div class="breadcrumbs">
        <h1>Edytuj news </h1>
        <ol class="breadcrumb">
            <li>
                <a href="{{ path('kardi_admin_homepage') }}">Panel administracyjny</a>
            </li>
            <li>
                <a href="{{ path('kardi_admin_news') }}">Newsy</a>
            </li>
            <li class="active">Edytuj news</li>
        </ol>
    </div>
    <!-- END BREADCRUMBS -->
    <!-- BEGIN SIDEBAR CONTENT LAYOUT -->
    <div class="page-content-container">
        <div class="page-content-row">
            <!-- BEGIN PAGE SIDEBAR -->
            <div class="page-sidebar">
                <nav class="navbar" role="navigation">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <ul class="nav navbar-nav margin-bottom-35 nav-tabs" role="tablist">
                        <li role="presentation">
                            <a href="#form_content" role="tab" data-toggle="tab"> <i class="fa fa-newspaper-o"></i>  Treść </a>
                        </li>
                        <li role="presentation">
                            <a href="#form_photo" role="tab" data-toggle="tab"> <i class="fa fa-photo"></i> Zdjęcia </a>
                        </li>
                        <li role="presentation" class="active">
                            <a href="#form_settings" role="tab" data-toggle="tab"> <i class="fa fa-cog"></i> Ustawienia </a>
                        </li>
                        <li role="presentation">
                            <a href="#form_tags" role="tab" data-toggle="tab"> <i class="fa fa-tag"></i> Tagi </a>
                        </li>
                        <li role="presentation">
                            <a href="#form_meta" role="tab" data-toggle="tab"> <i class="fa fa-tag"></i> Meta tagi
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <!-- END PAGE SIDEBAR -->
            <div class="page-content-col">
                <!-- BEGIN PAGE BASE CONTENT -->
                <div class="row">
                    <div class="col-md-12">

                        <div class="portlet box blue">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="fa fa-news"></i> Edytuj news
                                </div>
                            </div>
                            <div class="portlet-body form">
                                <!-- BEGIN FORM-->
                                    {% form_theme form with ['@KardiAdmin/Default/Form/metronic_layout.html.twig', _self] %}
                                    {{ form_start(form) }}
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane" id="form_content">


                                        <div class="tabbable-custom">
                                            <ul class="nav nav-tabs" role="tablist">
                                                {% for translation in form.translations %}
                                                    {% set lang = translation.vars.value.lang %}
                                                    <li role="presentation" class="{% if loop.index == 1 %} active {% endif %}">
                                                        <a href="#form_content_lang_{{ lang }}" role="tab" data-toggle="tab">
                                                            {{ lang | upper}}
                                                        </a>
                                                    </li>
                                                {% endfor %}
                                            </ul>

                                            <div class="tab-content">
                                            {# iterate over each existing tag and render its only field: name #}
                                            {% for translation in form.translations %}
                                                {% set lang = translation.vars.value.lang %}
                                                <div role="tabpanel" class="tab-pane {% if loop.index == 1 %} active {% endif %}" id="form_content_lang_{{ lang }}">
                                                    {{ form_row(translation.title) }}
                                                    {{ form_row(translation.content) }}
                                                    {{ form_row(translation.lang) }}
                                                </div>
                                            {% endfor %}
                                            </div>
                                        </div>
                                    </div>

                                    <div role="tabpanel" class="tab-pane active" id="form_settings">
                                        {{ form_row(form.author) }}
                                        {{ form_row(form.publishDate) }}
                                        {{ form_row(form.active) }}
                                        {{ form_row(form.breakingNews) }}
                                        {{ form_row(form.categoryId) }}
                                    </div>

                                    <div role="tabpanel" class="tab-pane" id="form_tags">
                                        {{ form_row(form.tags) }}
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                                <!-- END FORM-->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END PAGE BASE CONTENT -->
            </div>
        </div>
    </div>
    <!-- END SIDEBAR CONTENT LAYOUT -->

{% endblock %}

{% block styles %}
    {{ parent() }}
    <link href="{{ asset('bundles/kardiadmin/assets/global/plugins/select2/css/select2.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/kardiadmin/assets/global/plugins/select2/css/select2-bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/kardiadmin/assets/global/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock styles %}

{% block footer_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/kardiadmin/assets/global/plugins/select2/js/select2.full.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kardiadmin/assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kardiadmin/assets/custom/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kardiadmin/assets/custom/scripts.js') }}" type="text/javascript"></script>
{% endblock footer_javascripts %}
