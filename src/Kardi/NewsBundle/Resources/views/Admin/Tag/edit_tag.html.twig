{% extends 'KardiAdminBundle:Template:edit.html.twig' %}

{% block pageTitle %}
    Edytuj tag
{% endblock pageTitle %}

{% block content %}
    {% set breadcrumbItems = {'kardi_admin_news_tag': 'Tagi', '':(block('pageTitle'))} %}
    {% if sidebarItems is not defined %}
        {% set sidebarItems = [
        {'href': 'form_content', 'icon': 'fa-newspaper-o', 'title': 'Treść'},
        ] %}
    {% endif %}
    {{ parent() }}
{% endblock content %}

{% block pageContent %}
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="row">
        <div class="col-md-12">

            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-news"></i> {{ block('pageTitle') }}
                    </div>
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    {% form_theme form with ['@KardiAdmin/Default/Form/metronic_layout.html.twig', _self] %}
                    {{ form_start(form) }}
                    <div class="tab-content">
                        {% include 'KardiNewsBundle:Admin/Tag/Partial:content.html.twig' %}
                    {{ form_row(form.submit, { 'cancelUrl': path('kardi_admin_news_tag') }) }}
                    {{ form_end(form) }}
                    <!-- END FORM-->
                </div>
            </div>
        </div>
    </div>
{% endblock pageContent %}

{% block styles %}
    {{ parent() }}
{% endblock styles %}

{% block footer_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/kardiadmin/assets/custom/scripts.js') }}" type="text/javascript"></script>

    {% javascripts
    '@KardiAdminBundle/Resources/Public/images.js'
    output='js/compiled/images.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock footer_javascripts %}

