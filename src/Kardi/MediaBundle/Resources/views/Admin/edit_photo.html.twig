{% extends 'KardiAdminBundle::admin.html.twig' %}

{% block footer_javascripts %}
    {{ parent() }}
    {% javascripts
    '@KardiAdminBundle/Resources/Public/plugins/croppic/croppic.min.js'
    output='js/compiled/crop_photo_scripts.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock footer_javascripts %}

{% block styles %}
    {{ parent() }}
    {% stylesheets
    '@KardiAdminBundle/Resources/Public/plugins/croppic/croppic.css'
    filter='cssrewrite' output='css/compiled/crop_photo_scripts.css' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    <style>
        .page-content{
            background:darkgrey;
        }
    </style>
{% endblock styles %}

{% block content %}


    <div class="panel-group">
    {% for size in photoSizes %}
