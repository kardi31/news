{% macro show(items) %}
    {% if items|length > 0 %}
        <ol class="breadcrumb">
            {% for url, name in items %}
                {% if loop.last is defined and loop.index == loop.last %}
                    <li class="active">{{ name|trans }}</li>
                {% else %}
                    <li>
                        {% if url starts with '/' %}
                            <a href="{{ url }}">{{ name|trans }}</a>
                        {% else %}
                            <a href="{{ path(url) }}">{{ name|trans }}</a>
                        {% endif %}
                    </li>
                {% endif %}
            {% endfor %}
        </ol>
    {% endif %}
{% endmacro %}
