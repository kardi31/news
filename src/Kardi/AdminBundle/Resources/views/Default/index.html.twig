{% extends '@KardiAdmin/Template/metronic.html.twig' %}

{% block pageTitle %}
    Strona główna
{% endblock pageTitle %}


{% block pageContent %}
    <!-- END BREADCRUMBS -->
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="dashboard-stat2 bordered">
                <div class="display">
                    <div class="number">
                        <h3 class="font-green-sharp">
                            <span data-counter="counterup" data-value="{{ newsCount }}">0</span>
                        </h3>
                        <a href="{{ path('kardi_admin_news') }}">AKTUALNOŚCI</a>
                    </div>
                    <div class="icon">
                        <i class="fa fa-newspaper-o"></i>
                    </div>
                </div>
                <div class="progress-info">
                    <div class="progress">
                        <span style="width: 100%;"
                              class="progress-bar progress-bar-success green-sharp">
                            <span class="sr-only">100% progress</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="dashboard-stat2 bordered">
                <div class="display">
                    <div class="number">
                        <h3 class="font-red-haze">
                            <span data-counter="counterup" data-value="{{ commentCount }}">0</span>
                        </h3>
                        <a href="#">{% transchoice commentCount %}comment.number{% endtranschoice %}</a>
                    </div>
                    <div class="icon">
                        <i class="fa fa-comment"></i>
                    </div>
                </div>
                <div class="progress-info">
                    <div class="progress">
                        <span style="width: 100%;" class="progress-bar progress-bar-success red-haze">
                            <span class="sr-only">100% change</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="dashboard-stat2 bordered">
                <div class="display">
                    <div class="number">
                        <h3 class="font-blue-sharp">
                            <span data-counter="counterup" data-value="{{ galleryCount }}">0</span>
                        </h3>
                        <a href="{{ path('kardi_admin_gallery') }}">{% transchoice galleryCount %}gallery.number{% endtranschoice %}</a>
                    </div>
                    <div class="icon">
                        <i class="fa fa-camera"></i>
                    </div>
                </div>
                <div class="progress-info">
                    <div class="progress">
                        <span style="width: 100%;" class="progress-bar progress-bar-success blue-sharp">
                            <span class="sr-only">100% grow</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="dashboard-stat2 bordered">
                <div class="display">
                    <div class="number">
                        <h3 class="font-purple-soft">
                            <span data-counter="counterup" data-value="{{ adminCount }}">0</span>
                        </h3>
                        <a href="{{ path('kardi_admin_user_admin_list') }}">{% transchoice adminCount %}admin.number{% endtranschoice %}</a>
                    </div>
                    <div class="icon">
                        <i class="icon-user"></i>
                    </div>
                </div>
                <div class="progress-info">
                    <div class="progress">
                        <span style="width: 100%;" class="progress-bar progress-bar-success purple-soft">
                            <span class="sr-only">100% change</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/kardiadmin/assets/global/scripts/app.js') }}"></script>
    <script src="{{ asset('bundles/kardiadmin/assets/global/plugins/counterup/jquery.waypoints.min.js') }}"></script>
    <script src="{{ asset('bundles/kardiadmin/assets/global/plugins/counterup/jquery.counterup.min.js') }}"></script>
{% endblock %}
